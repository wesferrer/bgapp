<div class="container text-center">
  <div class="row">
    <div class="col-md-4 text-center">
      <h1><%= @game.name %> - <%= @play.date%></h1>
      <%= image_tag @play.game.image.url, class: 'img-responsive center-block', width: "200px", height: "200px" %>
      </div>

    <div class="col-md-4">
      <p><h2 class= "panel panel-header">Info</h2></p>
      <div class="panel panel-footer">
        <h3>Score:</h3>
        <p><%= @play.score %></p>
        <h3>Location </h3>
        <p><%= @play.location %></p>
        <h3>Duration</h3>
        <p><%= @play.duration%> hours</p>

      </div>
    </div>

    <div class="col-md-4">
      <p><h2 class="panel panel-header">Details</h2></p>
      <ul class="panel panel-footer">
        <li><%= @play.comments%></li>
        <% p "lol" * 50%>
        <% p @play.comments%>
      </ul>
    </div>
  </div>
</div>
<footer class="text-center" id="games-footer">
<%= link_to "Edit", edit_play_path, class: "btn btn-default" %>
&nbsp;&nbsp;|&nbsp;&nbsp;
<%= link_to "Delete this play", play_path(@play), method: :delete, data: { confirm: "Delete this play?"}, class: "btn btn-danger"%>
</footer>
