<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h1 class="text-center"><%= @play.game.name%> - New Play</h1>
      <%= image_tag @play.game.image.url, class: 'img-responsive center-block', width: "200px", height: "200px" %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12">
      <h3 class="text-center">Add new play</h3>
    </div>
    <div class="col-md-6 col-md-offset-3">
      <%= form_for @play, html: {class: 'form-horizontal'} do |f|%>
      <div class="form-group">
      <%= f.label :date%>
      <%= f.date_field :date, class: 'form-control' %>
      </div >
      <div class="form-group">
      <%= f.label "Duration in hours" %>
      <%= f.select :duration, "1".."12", class: 'form-control' %>
      </div >
      <div class="form-group">
      <%= f.label :location%>
      <%= f.text_field :location, class: 'form-control', placeholder: 'Home' %>
      </div >
      <div class="form-group">
      <%= f.label :score, "My Score"%>
      <%= f.number_field :score, class: 'form-control' %>
      </div >
      <div class="form-group">
      <%= f.label "Details", :comments%>
      <%= f.text_area :comments, class: 'form-control', placeholder: 'example: John: 23'%>
      </div >
      <%= f.hidden_field :game_id, value: params[:game_id] %>
      <%= f.submit "Submit", class: "btn btn-primary"%>
      <%= link_to "Back", games_path,  class: "btn btn-default"%>
      <% end%>
    </div>
  </div>
</div>
