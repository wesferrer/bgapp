<h1>Add a new game</h1>

<%= form_for @game, html: { multipart: true } do |f| %>

    <div>
        <%= f.label :name %>
        <%= f.text_field :name %>
    </div>

    <div>
    <%= f.file_field :image %>
    </div>

    <div>
        <%= f.label :year %>
        <%= f.text_field :year %>
    </div>

    <div>
        <%= f.label :designer %>
        <%= f.text_field :designer %>
    </div>

    <div>
        <%= f.label :publisher %>
        <%= f.text_field :publisher %>
    </div>

    <div>
        <%= f.label :max_players %>
        <%= f.text_field :max_players %>
    </div>

    <%= f.submit "Add new game" %>

<% end %>

<%= link_to "Back to the list!", games_path %>
